<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1"
        android:background="#fff50057"
        android:layout_margin="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/linearLayout2"
            android:background="#ff311b92">
            <TextView
                android:text="Page1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView1"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:textSize="30dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/linearLayout3"
            android:background="#ff78909c"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/name"
                android:background="#ffffffff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="7dp"
                android:hint="Name"
                android:gravity="center" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/code"
                android:background="#ffffffff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="7dp"
                android:hint="Code"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/linearLayout4"
            android:background="#ff9e9e9e"
            android:gravity="center"
            android:layout_margin="15dp">
            <Button
                android:text="Signin"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:id="@+id/signin"
                android:backgroundTint="#ff1a237e"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="10dp" />
            <Button
                android:text="Clear"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:id="@+id/clear"
                android:backgroundTint="#fff50057"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="10dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout5"
            android:background="#ff8d6e63"
            android:gravity="center"
            android:layout_margin="15dp">
            <Button
                android:text="Page3"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:id="@+id/page3"
                android:backgroundTint="#ffe65100"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:background="#ff000000" />
            <Button
                android:text="Close"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:id="@+id/close"
                android:backgroundTint="#ff1b5e20"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="10dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>